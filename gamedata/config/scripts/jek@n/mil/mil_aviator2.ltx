[smart_terrains]
none = true

[dont_spawn_loot]

[logic]
active = {+mil_aviatrs_fail} walker@2, walker@start
combat_ignore = combat_ignore
threshold = threshold@mil_aviator2_threshold
on_death = death

[walker@start]
path_walk = mil_aviator2_walk1
path_look = mil_aviator1_look1
danger = danger_condition
combat_ignore_cond = always
on_timer = 1|walker@1 %=make_invulnerable%

[walker@1]
path_walk = mil_aviator2_walk1
path_look = mil_aviator1_look1
danger = danger_condition
combat_ignore_cond = always
meet = no_meet
on_info = {+mil_grav_off} %=delme2%


; Если стреляли по собаке:
[walker@2]
path_walk = mil_aviator1_walk1
path_look = mil_aviator1_look1
danger = danger_condition
combat_ignore_cond = always
on_timer = 1|walker@3 %=killactor%

[walker@3]
path_walk = mil_aviator1_walk1
path_look = mil_aviator1_look1
meet = no_meet




[threshold@mil_aviator2_threshold]
max_ignore_distance = 5
ignore_monster = 0

[danger_condition]
ignore_distance = 0
ignore_distance_corpse = 0

[combat_ignore]
combat_ignore = always

[death]
;on_info = %+mil_aviator2_dead%

