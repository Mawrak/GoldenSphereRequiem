[smart_terrains]
none = true

[logic]
active = walker@start, {+agr_nii_ecolog_in_vagon} walker@4
on_death = death

[walker@start]
path_walk = nii_ecolog_walk1
path_look = nii_ecolog_look1
on_timer      = 1 | remark@start %=make_invulnerable%

[remark@start]
anim = wounded_heavy
target = nil
danger = danger_condition
combat_ignore_cond = always
on_info = {+agr_nii_ecolog_goto_yard} walker@1

[walker@1]
path_walk = nii_ecolog_walk1
path_look = nii_ecolog_look1
danger = danger_condition
combat_ignore_cond = always
meet = no_meet
on_signal       = arrived | walker@2 %+agr_nii_ecolog_in_yard =spawn_agr_nii_ecolog_ambush =play_snd_from_obj(8452:characters_voice\human_03\ecolog\reactions\nothing\nothing_3)%

[walker@2]
path_walk = nii_ecolog_walk1
path_look = nii_ecolog_look1
danger = danger_condition
combat_ignore_cond = always
on_info = {+agr_nii_ecolog_bloodsucker1_dead} walker@3_1 %=make_invulnerable =play_snd_from_obj(8452:characters_voice\human_03\ecolog\fight\enemy_down\enemy_down_5) =health_up%

[walker@3_1]
path_walk = nii_ecolog_walk1
path_look = nii_ecolog_look1
danger = danger_condition
combat_ignore_cond = always
on_info = {+agr_nii_ecolog_goto_vagon} walker@3

[walker@3]
path_walk = nii_ecolog_walk2
path_look = nii_ecolog_look2
danger = danger_condition
combat_ignore_cond = always
meet = no_meet
on_signal       = arrived | walker@4 %+agr_nii_ecolog_in_vagon% 

[walker@4]
path_walk = nii_ecolog_walk2
path_look = nii_ecolog_look2
danger = danger_condition
combat_ignore_cond = always













[danger_condition]
ignore_distance = 0
ignore_distance_corpse = 0

[combat_ignore]
combat_ignore = always

[death]
on_info = %+agr_nii_ecolog_dead%