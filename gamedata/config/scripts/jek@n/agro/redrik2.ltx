[smart_terrains]
none = true

[logic]
active = {+agr_redrik_goto_vagon} walker@2, walker@start
on_death = death

[walker@start]
path_walk = redrik2_walk1
path_look = redrik2_look1
on_timer      = 1 | walker@1 %=make_invulnerable%

[walker@1]
path_walk = redrik2_walk1
path_look = redrik2_look1
danger = danger_condition
combat_ignore_cond = always
on_info = {+agr_redrik_goto_vagon} walker@2

[walker@2]
path_walk = redrik2_walk2
path_look = redrik2_look2
danger = danger_condition
combat_ignore_cond = always
meet = no_meet
on_signal       = arrived | walker@3 %+agr_redrik_in_vagon%

[walker@3]
path_walk = redrik2_walk2
path_look = redrik2_look2
danger = danger_condition
combat_ignore_cond = always













[danger_condition]
ignore_distance = 0
ignore_distance_corpse = 0

[combat_ignore]
combat_ignore = always

[death]
on_info = %+redrik2_dead%