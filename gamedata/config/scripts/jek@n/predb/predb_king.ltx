[smart_terrains]
none = true

[dont_spawn_loot]

[logic]
active = walker@start
combat_ignore = combat_ignore
on_death = death
threshold = threshold@predb_king_threshold
meet = meet
trade = misc\trade_nothing.ltx

[walker@start]
path_walk = predb_king_walk1
path_look = predb_king_look1
on_timer = 1|walker@1 %=make_invulnerable =disable_trading%


[walker@1]
path_walk = predb_king_walk1
path_look = predb_king_look1
danger = danger_condition
combat_ignore_cond = always
meet = no_meet
on_signal       = arrived|walker@2 %=play_snd_on_me(characters_voice\human_01\stalker\fight\enemy\enemy_3)%

[walker@2]
path_walk = predb_king_walk1
path_look = predb_king_look1
danger = danger_condition
combat_ignore_cond = always
on_info = {+predb_king_info3} walker@3 %=unmake_invulnerable =play_snd_on_me(characters_voice\human_01\stalker\states\panic_monster\panic_monster_1)%

[walker@3]
path_walk = predb_king_walk2
path_look = predb_king_look2
danger = danger_condition
combat_ignore_cond = always
meet = no_meet
def_state_moving1 = sprint_p
def_state_moving2 = sprint_p
def_state_moving3 = sprint_p



[danger_condition]
ignore_distance = 0
ignore_distance_corpse = 0

[threshold@predb_king_threshold]
max_ignore_distance = 0
ignore_monster = 0

[combat_ignore]
combat_ignore = always

[death]
on_info = %+predb_king_dead%

