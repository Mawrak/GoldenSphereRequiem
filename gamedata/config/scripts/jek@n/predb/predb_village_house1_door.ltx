[logic]
active = ph_door@locked

[ph_door@locked]
locked = true
closed = true
snd_open_start = wood_large_open
snd_close_start = wood_large_close_start
snd_close_stop = wood_large_close_stop
show_tips = true
tip_open = locked_door_need_key_use
on_use = {=actor_has_item(predb_village_dead_friend_door_key)} ph_door@open


[ph_door@close]
locked = false
closed = true
snd_open_start = wood_large_open
snd_close_start = wood_large_close_start
snd_close_stop = wood_large_close_stop
show_tips = true
;tip_open = dar_building_generator_door_use
on_use = ph_door@open

[ph_door@open]
locked = false
closed = false
snd_open_start = wood_large_open
snd_close_start = wood_large_close_start
snd_close_stop = wood_large_close_stop
on_use = ph_door@close


[ph_door@free]
locked = false
closed = true
no_force = true
on_use = ph_door@open