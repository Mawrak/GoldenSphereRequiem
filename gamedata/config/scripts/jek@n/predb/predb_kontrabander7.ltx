;combat_ignore_cond = always
on_info = {+predb_kpp_fight_start} walker@2 %=set_enemies(8628:8629:8630:8631:8632:8633:8634)%

[walker@2]
path_walk = predb_kontrabander7_walk2
path_look = predb_kontrabander7_look2
