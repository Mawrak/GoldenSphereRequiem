on_death = death
on_hit = hit
threshold = threshold@predb_kontrabander7_threshold
meet = meet

[walker@start]
path_walk = predb_kontrabander7_walk1
path_look = predb_kontrabander7_look1
on_info = {+predb_kpp_fight_start} walker@shooting
;on_info = {+predb_kpp_fight_start} walker@2 %=set_enemies(8628:8629:8630:8631:8632:8633:8634)%

[walker@shooting]
