[smart_terrains]
none = true

[dont_spawn_loot]

[logic]
active = walker@start
combat_ignore = combat_ignore
on_hit = hit
on_death = death
threshold = threshold@predb_kpp_soldier2_threshold
meet = meet

[walker@start]
path_walk = predb_kpp_soldier2_walk1
