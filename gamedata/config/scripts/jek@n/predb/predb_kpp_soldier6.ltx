[smart_terrains]
none = true

[dont_spawn_loot]

[logic]
active = {+predb_kpp_kontrab_atacked} walker@2, walker@start
combat_ignore = combat_ignore
on_death = death
on_hit = hit
trade = misc\trade_soldier.ltx
threshold = threshold@predb_kpp_soldier6_threshold
meet = meet

[walker@start]
path_walk = predb_kpp_soldier6_walk1
path_look = predb_kpp_soldier6_look1
on_info = {+predb_kpp_fight_start} walker@shooting

[walker@shooting]
path_walk = predb_kpp_soldier6_walk1
path_look = predb_kpp_soldier6_shoot_kontrab
danger = danger_condition
combat_ignore_cond = always
on_info = {+predb_kpp_kontrab_atacked} walker@1 %=set_enemies(8635:8636:8637)%
on_info2 = {+predb_kpp_soldiers_atacked} walker@1 %=set_enemies(8635:8636:8637) =killactor%

[walker@1]
path_walk = predb_kpp_soldier6_walk2
path_look = predb_kpp_soldier6_look2
danger = danger_condition
combat_ignore_cond = always
on_info = {+predb_kpp_fight_start} %=set_enemies(8635:8636:8637)%

[walker@2]
path_walk = predb_kpp_soldier6_walk1
path_look = predb_kpp_soldier6_look1
danger = danger_condition
;combat_ignore_cond = always





[danger_condition]
ignore_distance = 0
ignore_distance_corpse = 0

[threshold@predb_kpp_soldier6_threshold]
max_ignore_distance = 0
ignore_monster = 0

[combat_ignore]
combat_ignore = always

[hit]
on_info = {-predb_kpp_soldiers_atacked =hit_by_actor} %+predb_kpp_soldiers_atacked%

[death]
on_info = {=killed_by_actor} %+predb_kpp_soldier6_dead +predb_kpp_soldiers_atacked%, {!killed_by_actor} %+predb_kpp_soldier6_dead%

