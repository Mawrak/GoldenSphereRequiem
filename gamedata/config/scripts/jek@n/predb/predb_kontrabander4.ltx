[smart_terrains]
none = true

[dont_spawn_loot]

[logic]
active = {+predb_village_grass_info} walker@5, walker@start
combat_ignore = combat_ignore
on_death = death
threshold = threshold@predb_kontrabander4_threshold
meet = meet
trade = misc\trade_nothing.ltx

[walker@start]
path_walk = predb_kontrabander4_walk1
path_look = predb_kontrabander4_look1
on_timer = 1|walker@1 %=make_invulnerable%


[walker@1]
path_walk = predb_kontrabander4_walk1
path_look = predb_kontrabander4_look1
danger = danger_condition
combat_ignore_cond = always
on_info = {=predb_kontrab4see_actor} %=predb_kontrab1actor_radhit%
on_actor_dist_le = 4|walker@2

[camper@idle]
path_walk = predb_kontrabander4_walk1
path_look = predb_kontrabander4_look1
sniper = true
def_state_campering = specnaz_hide
radius = 1
on_info = {=predb_kontrab4see_actor} %=predb_kontrab1actor_radhit%
on_actor_dist_le = 4|walker@2 

[walker@2]
path_walk = predb_kontrabander4_walk1
path_look = predb_kontrabander4_look1
danger = danger_condition
combat_ignore_cond = always
on_actor_dist_le = 4|%=kontrab4dialog_start%
on_info = {+predb_village_grass_info} walker@3
on_info2 = {+kontrab_lager_info} walker@3
on_info3 = {+kontrabander4_enemy} walker@4 %=killactor =unmake_invulnerable%


; Мир:
[walker@3]
path_walk = predb_kontrabander4_walk1
path_look = predb_kontrabander4_look1
danger = danger_condition
combat_ignore_cond = always
meet = no_meet
on_info = {=predb_kontrab4see_actor} %=predb_kontrab1actor_radhit%
on_info2 = {+predb_village_grass_info} walker@5

; Война:
[walker@4]
path_walk = predb_kontrabander4_walk1
path_look = predb_kontrabander4_look1
meet = no_meet
on_info = {=predb_kontrab4see_actor} %=predb_kontrab1actor_radhit%


; Отдыхаем у костра:
[walker@5]
path_walk = predb_kontrabander4_walk2
path_look = predb_kontrabander4_look2
danger = danger_condition
combat_ignore_cond = always
on_info = {=predb_kontrab4see_actor} %=predb_kontrab1actor_radhit%



[danger_condition]
ignore_distance = 0
ignore_distance_corpse = 0

[threshold@predb_kontrabander4_threshold]
max_ignore_distance = 0
ignore_monster = 0

[combat_ignore]
combat_ignore = always

[death]
on_info = %+predb_kontrabander4_dead =predb_kontrabander4spawn_in%

