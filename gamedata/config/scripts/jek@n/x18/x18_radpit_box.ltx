[logic]
active = ph_idle1

[ph_idle1]
on_info = {+subj5_box_info} ph_idle2

[ph_idle2]
on_timer = 1 | {~25} ph_code2, {~45} ph_code1, {~75} ph_code3, ph_code4


[ph_code1]
code = 1909
on_code = ph_idle@open %=play_snd(device\metal_small_close_stop)%
tips = x18_radpit_box_use1
on_info = {=actor_has_item_on_belt(af_marouders_hand)} ph_idle@hand

[ph_code2]
code = 1911
on_code = ph_idle@open %=play_snd(device\metal_small_close_stop)%
tips = x18_radpit_box_use2
on_info = {=actor_has_item_on_belt(af_marouders_hand)} ph_idle@hand

[ph_code3]
code = 1492
on_code = ph_idle@open %=play_snd(device\metal_small_close_stop)%
tips = x18_radpit_box_use3
on_info = {=actor_has_item_on_belt(af_marouders_hand)} ph_idle@hand

[ph_code4]
code = 1788
on_code = ph_idle@open %=play_snd(device\metal_small_close_stop)%
tips = x18_radpit_box_use4
on_info = {=actor_has_item_on_belt(af_marouders_hand)} ph_idle@hand



[ph_idle@hand]
tips = safe_use_with_maroders_hand
on_use = ph_idle@open %=play_snd(device\metal_small_close_stop) =karma_down%
on_info = {!actor_has_item_on_belt(af_marouders_hand)} ph_idle2


[ph_idle@open]
nonscript_usable = true
tips = st_search_treasure

