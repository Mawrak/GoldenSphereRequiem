[logic]
active = ph_idle@1

[ph_idle@1]
on_info = {+bar_kotelnya_quest} ph_idle@2

[ph_idle@2]
on_timer = 1 |  {~25} ph_code@2, {~45} ph_code@1, {~75} ph_code@3, ph_code@4


[ph_code@1]
code = 1672
on_code = ph_idle@open %=play_snd(device\metal_small_close_stop) +bar_kotelnya_seif_open%
tips = bar_kotelnya_use1
on_info = {=actor_has_item_on_belt(af_marouders_hand)} ph_idle@hand

[ph_code@2]
code = 1729
on_code = ph_idle@open %=play_snd(device\metal_small_close_stop) +bar_kotelnya_seif_open%
tips = bar_kotelnya_use2
on_info = {=actor_has_item_on_belt(af_marouders_hand)} ph_idle@hand

[ph_code@3]
code = 1845
on_code = ph_idle@open %=play_snd(device\metal_small_close_stop) +bar_kotelnya_seif_open%
tips = bar_kotelnya_use3
on_info = {=actor_has_item_on_belt(af_marouders_hand)} ph_idle@hand

[ph_code@4]
code = 1868
on_code = ph_idle@open %=play_snd(device\metal_small_close_stop) +bar_kotelnya_seif_open%
tips = bar_kotelnya_use4
on_info = {=actor_has_item_on_belt(af_marouders_hand)} ph_idle@hand



[ph_idle@hand]
tips = safe_use_with_maroders_hand
on_use = ph_idle@open %=play_snd(device\metal_small_close_stop) =karma_down +bar_kotelnya_seif_open%
on_info = {!actor_has_item_on_belt(af_marouders_hand)} ph_idle@2


[ph_idle@open]
nonscript_usable = true
tips = st_search_treasure