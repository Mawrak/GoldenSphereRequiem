[logic]
active = ph_idle

[ph_idle]
on_timer = 1 |  {~25} ph_code@2, {~45} ph_code@1, {~75} ph_code@3, ph_code@4


[ph_code@1]
code = 1953
on_code = ph_idle@open %=play_snd(device\metal_small_close_stop)%
tips = bar_kamazseif_use1
on_info = {=actor_has_item_on_belt(af_marouders_hand)} ph_idle@hand

[ph_code@2]
code = 1789
on_code = ph_idle@open %=play_snd(device\metal_small_close_stop)%
tips = bar_kamazseif_use2
on_info = {=actor_has_item_on_belt(af_marouders_hand)} ph_idle@hand

[ph_code@3]
code = 1917
on_code = ph_idle@open %=play_snd(device\metal_small_close_stop)%
tips = bar_kamazseif_use3
on_info = {=actor_has_item_on_belt(af_marouders_hand)} ph_idle@hand

[ph_code@4]
code = 1918
on_code = ph_idle@open %=play_snd(device\metal_small_close_stop)%
tips = bar_kamazseif_use4
on_info = {=actor_has_item_on_belt(af_marouders_hand)} ph_idle@hand



[ph_idle@hand]
tips = safe_use_with_maroders_hand
on_use = ph_idle@open %=play_snd(device\metal_small_close_stop) =karma_down%
on_info = {!actor_has_item_on_belt(af_marouders_hand)} ph_idle


[ph_idle@open]
nonscript_usable = true
tips = st_search_treasure