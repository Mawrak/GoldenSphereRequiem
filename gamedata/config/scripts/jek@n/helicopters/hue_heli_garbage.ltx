[logic]
active = heli_move@waiting

; Висим за локацией и ждем, пока позовут
[heli_move@waiting]
path_move = garb_hue_heli_point_wait
engine_sound = false
combat_ignore = true
combat_enemy = nil
invulnerable = true
immortal = true
default_velocity = 0
on_info = {+client1_garbage_traveling} heli_move@to_place_timer

; Нас позвали, но все еще висим в начальной точке, изображая длительный полет
[heli_move@to_place_timer]
path_move = garb_hue_heli_point_wait
engine_sound = false
combat_ignore = true
combat_enemy = nil
invulnerable = true
immortal = true
default_velocity = 0
on_timer = 30000 | heli_move@to_place1


; Летим к точке высадки
[heli_move@to_place1]
path_move = garb_hue_heli_point_way1
engine_sound = true
combat_ignore = true
combat_enemy = nil
invulnerable = true
immortal = true
default_velocity = 15
on_signal = arrived | heli_move@to_place2

[heli_move@to_place2]
path_move = garb_hue_heli_point_way2
engine_sound = true
combat_ignore = true
combat_enemy = nil
invulnerable = true
immortal = true
default_velocity = 15
on_signal = arrived | heli_move@on_place1



; Прилетели на точку и снижаемся:
[heli_move@on_place1]
path_move = garb_hue_heli_point_way_on_place
engine_sound = true
combat_ignore = true
combat_enemy = nil
invulnerable = true
immortal = true
default_velocity = 10
on_signal = arrived | heli_move@on_place2

; Сели, подождали немного:
[heli_move@on_place2]
path_move = garb_hue_heli_point_way_on_ground
engine_sound = true
combat_ignore = true
combat_enemy = nil
invulnerable = true
immortal = true
default_velocity = 4
on_signal = arrived | heli_move@on_place3

; Высаживаем людей:
[heli_move@on_place3]
path_move = garb_hue_heli_point_way_on_ground
engine_sound = true
combat_ignore = true
combat_enemy = nil
invulnerable = true
immortal = true
default_velocity = 0
on_timer = 6000 | heli_move@ground %=garb_hue_heli_desant%

; Сидим:
[heli_move@ground]
path_move = garb_hue_heli_point_way_on_ground
engine_sound = true
combat_ignore = true
combat_enemy = nil
invulnerable = true
immortal = true
default_velocity = 0
on_info = {+garb_hue_heli_back1 +garb_hue_heli_back2 +garb_hue_heli_back3} heli_move@on_place4









; Поднимаемся:
[heli_move@on_place4]
path_move = garb_hue_heli_point_way_on_place
engine_sound = true
combat_ignore = true
combat_enemy = nil
invulnerable = true
immortal = true
default_velocity = 4
on_signal = arrived | heli_move@back_1



; Улетаем обратно
[heli_move@back_1]
path_move = garb_hue_heli_point_way2
engine_sound = true
combat_ignore = true
combat_enemy = nil
invulnerable = true
immortal = true
default_velocity = 20
on_signal = arrived | heli_move@back_2 

[heli_move@back_2]
path_move = garb_hue_heli_point_way1
engine_sound = true
combat_ignore = true
combat_enemy = nil
invulnerable = true
immortal = true
default_velocity = 20
on_signal = arrived | heli_move@back_3 

[heli_move@back_3]
path_move = garb_hue_heli_point_wait
engine_sound = false
combat_ignore = true
combat_enemy = nil
invulnerable = true
immortal = true
default_velocity = 10
on_signal = arrived | heli_move@waiting %-notebook_client1task1 -notebook_client1task2 -notebook_client1task3 -notebook_client1task1 -client1_garbage_traveling -garb_hue_heli_back1 -garb_hue_heli_back2 -garb_hue_heli_back3 -notebook_client1task1_reward -notebook_client1task2_reward -notebook_client1task3_reward -client1_art1_have -client1_art2_have -client1_art3_have%



