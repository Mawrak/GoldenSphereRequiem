[sr_idle@3]
on_timer = 2000 | sr_idle@4 %=play_snd(characters_voice\scenario\anomal_clock_work) =run_postprocess(blink:678:false)%

[sr_idle@4]
on_timer = 2000 | sr_idle@5 %=play_snd(characters_voice\scenario\anomal_clock_work) =run_postprocess(blink:678:false)%

[sr_idle@5]
on_timer = 2000 | sr_idle@6 %=play_snd(characters_voice\scenario\anomal_clock_work) =run_postprocess(blink:678:false)%

[sr_idle@6]
on_timer = 2000 | sr_idle@7 %=play_snd(characters_voice\scenario\anomal_clock_work) =run_postprocess(blink:678:false) -af_watch_used =enable_ui%


[sr_idle@7]
on_timer = 100 | sr_idle@0



