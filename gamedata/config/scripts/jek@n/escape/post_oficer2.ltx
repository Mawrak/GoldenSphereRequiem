[smart_terrains]
none = true

[dont_spawn_loot]

[logic]
active = walker@start
combat_ignore = combat_ignore
on_death = death

[walker@start]
path_walk = post_oficer2_walk1
path_look = post_oficer2_look1
on_timer = 10 | walker1 %=make_invulnerable =disable_trading%


[walker1]
path_walk = post_oficer2_walk1
path_look = post_oficer2_look1
danger = danger_condition
combat_ignore_cond = {-blokpost_alarm2 -kazarma_door_broken}
meet = no_meet
on_timer = 4000 | walker2 %=play_snd_from_obj(8120:characters_voice\human_03\military\states\idle\idle_15)%
on_actor_dist_le = 11 | %=blokpost_enemy =killactor%

[walker2]
path_walk = post_oficer2_walk1
path_look = post_oficer2_look2
danger = danger_condition
combat_ignore_cond = {-blokpost_alarm2 -kazarma_door_broken}
meet = no_meet
on_timer = 55000 | walker1 %=play_snd_from_obj(8120:characters_voice\human_03\military\states\idle\idle_19)%
on_actor_dist_le = 11 | %=blokpost_enemy =killactor%
on_info = {+skidan_post_stels_task} walker@when_actor_at_bpost_again




; После взятия квеста "Выкрасть костюм из арсенала".
[walker@when_actor_at_bpost_again]
path_walk = post_oficer2_walk1
path_look = post_oficer2_look2
danger = danger_condition
def_state_moving1 = sprint_p
def_state_moving2 = sprint_p
def_state_moving3 = sprint_p
combat_ignore_cond = {-blokpost_alarm3}
on_actor_dist_le = 20 | walker@when_actor_at_bpost_again_alarm %=blokpost_alarm3%
on_info = {+blokpost_alarm3} walker@when_actor_at_bpost_again_alarm

[walker@when_actor_at_bpost_again_alarm]
path_walk = post_oficer2_walk1
path_look = post_oficer2_look2
danger = danger_condition
def_state_moving1 = sprint_p
def_state_moving2 = sprint_p
def_state_moving3 = sprint_p
combat_ignore_cond = {-blokpost_alarm3}
on_timer = 20000 | walker@when_actor_at_bpost_again %-blokpost_alarm3%








[meet]
meet_state = 5| idle
meet_state = 5| idle
victim = 5| nil
victim_wpn = 5| nil
use = true
use_wpn = true

[danger_condition]
ignore_distance = 0
ignore_distance_corpse = 0

[combat_ignore]
combat_ignore = always

[death]
on_info = %+post_oficer2_dead%

