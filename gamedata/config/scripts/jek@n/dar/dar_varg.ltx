[smart_terrains]
none = true

[dont_spawn_loot]

[logic]
active = walker@start
;combat_ignore = combat_ignore
on_death = death

[walker@start]
path_walk = dar_warg_walk1
path_look = dar_warg_look1
on_timer = 10 | walker@wait %=make_invulnerable =disable_trading%

[walker@wait]
path_walk = dar_warg_walk1
path_look = dar_warg_look1
danger = danger_condition
combat_ignore_cond = always
on_actor_dist_le_nvis = 10 | walker@hello


[walker@hello]
path_walk = dar_warg_walk2
path_look = dar_warg_look2
danger = danger_condition
combat_ignore_cond = always
on_info = {+dar_varg_go_away} walker@away

[walker@away]
path_walk = dar_warg_walk3
path_look = dar_warg_look3
danger = danger_condition
combat_ignore_cond = always
meet = no_meet
on_signal       = arrived | %=delme%





[meet]
