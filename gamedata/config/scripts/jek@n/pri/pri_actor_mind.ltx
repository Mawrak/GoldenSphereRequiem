[remark@death]
anim = psy_pain
;snd = help
target = actor
no_move = true
danger = danger_condition
combat_ignore_cond = always
meet = no_meet
on_signal = anim_end|nil %=delme2%




[threshold@pri_actor_mind_threshold]
