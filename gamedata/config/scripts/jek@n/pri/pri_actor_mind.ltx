[smart_terrains]
none = true

[dont_spawn_loot]

[logic]
active = walker@start
combat_ignore = combat_ignore
threshold = threshold@pri_actor_mind_threshold
trade = misc\trade_nothing.ltx

[walker@start]
path_walk = pri_actor_mind_walk1
path_look = pri_actor_mind_look1
danger = danger_condition
combat_ignore_cond = always
meet = no_meet
on_timer = 1|walker@1 %=make_invulnerable%

[walker@1]
path_walk = pri_actor_mind_walk2
path_look = pri_actor_mind_look2
danger = danger_condition
combat_ignore_cond = always
on_info = {+actor_mind_fight} walker@2_1 %=pri_rooftop_battle_doll_tip%


; Сидим, боимся призраков и орём:
