[smart_terrains]
none = true

[dont_spawn_loot]

[logic]
active = {+pri_agents_accept} walker@start, {+pri_agent_lider_hit_by_actor} kamp@killactor
combat_ignore = combat_ignore
threshold = threshold@pri_agent3_threshold
on_death = death

[walker@start]
path_walk = pri_agent3_walk1
path_look = pri_agents_base_pray_point1
danger = danger_condition
combat_ignore_cond = always
meet = no_meet
on_timer = 1|walker@1 %=make_invulnerable =set_neutral%

[kamp@killactor]
center_point = pri_agents_kamp1
radius = 4
def_state_moving = sprint_p


[walker@1]
path_walk = pri_agent3_walk1
path_look = pri_agents_base_pray_point1
danger = danger_condition
combat_ignore_cond = always
meet = no_meet
on_info = {+pri_agent_lider_speech_end} walker@2

[walker@2]
path_walk = pri_agent3_walk1
path_look = pri_agents_base_pray_point2
danger = danger_condition
combat_ignore_cond = always
meet = no_meet
on_info = {+pri_timecapsula_zone4_info} nil %=delme2%




[threshold@pri_agent3_threshold]
max_ignore_distance = 5
ignore_monster = 0

[danger_condition]
ignore_distance = 0
ignore_distance_corpse = 0

[combat_ignore]
combat_ignore = always

[death]
on_info = %+pri_agent3_dead%

