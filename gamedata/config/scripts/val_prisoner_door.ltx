[logic]
active = ph_door@locked

[ph_door@locked]
locked = true
closed = true
snd_init = trader_door_close_start
snd_open_start = trader_door_locked
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop
on_info = {+val_prisoner_door_unlocked} ph_door@open

[ph_door@open]
locked = false
closed = false
snd_init = trader_door_close_start
snd_open_start = trader_door_locked
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop
;on_actor_dist_ge_nvis = 10 | ph_door@close

[ph_door@close]
locked = false
closed = true
snd_init = trader_door_close_start
snd_open_start = trader_door_locked
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop