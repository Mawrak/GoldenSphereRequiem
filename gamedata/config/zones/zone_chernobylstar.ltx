[star_zone_weak]
GroupControlSection			= spawn_group_zone
$spawn						= "zones\star"
;$prefetch 					= 8
class						= Z_TORRID
hit_impulse_scale			=   0
effective_radius			= 2.75 ;размер радиуса в процентах от оригинального, где действует зона
postprocess					= postprocess_flame

ef_anomaly_type				= 1
ef_weapon_type				= 13

artefacts		= 
BirthProbability = 0.0

;----------- Anomaly settings -----------------------
min_start_power		= 0.99
max_start_power		= 1.50
attenuation			= 1
period				= 1
min_artefact_count	= 0
max_artefact_count	= 0

idle_particles				= anomaly2\group_items\teleport_glow_out_00
blowout_particles			= anomaly2\group_items\teleport_glow_out

hit_small_particles	    	= anomaly2\group_items\teleport_glow_out
hit_big_particles			= anomaly2\group_items\star
idle_small_particles		= anomaly2\group_items\generator_death_01
idle_big_particles			= anomaly2\group_items\generator_death_01



;idle_particles				= light_fx\light_clear_01---
;blowout_particles			= light_fx\light_clear_01---

;hit_small_particles	    	= light_fx\light_clear_01---
;hit_big_particles			= light_fx\light_clear_01---
;idle_small_particles		= light_fx\light_clear_01---
;idle_big_particles			= light_fx\light_clear_01---



idle_particles_dont_stop	= false;

;idle_sound			= script_replics\megafon\music\megafon_music_1	;постоянный звук
idle_sound			= addon\evacuation	;постоянный звук
blowout_sound			= script_replics\megafon\music\megafon_music_5	;во время выброса(удара) в центре аномалии	
hit_sound				= ambient\random\rnd_the_horror1					;на персонаже, когда тот получает хит
entrance_sound			= ambient\random\rnd_the_horror1	;при попадании объекта в аномалию

hit_type					= telepatic

disable_time		= 0	;время игнорирования неживого объекта в зоне (-1 если не нужно)
disable_time_small	= 0	;время игнорирования маленького неживого объекта в зоне (-1 если не нужно)
disable_idle_time	= 50000	;время отключения idle партиклов

ignore_nonalive		= true
ignore_small		= true
ignore_artefacts	= true

blowout_light		= off
light_color		    = 0.9,0.0,0.1
light_range		    = 40.0
light_time 		    = 1
light_height		= 0.75			;подъем источника света на высоту


idle_light			= on
idle_light_range	= 15.0
idle_light_range_delta = 0.2
idle_light_anim		= koster_01
idle_light_height	= 0.75			;подъем источника света на высоту

awaking_time		= 100
blowout_time		= 300	
accamulate_time		= 100

visible_by_detector = on

blowout_wind		= off

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;рождение артефактов во время срабатывания
spawn_blowout_artefacts = off




