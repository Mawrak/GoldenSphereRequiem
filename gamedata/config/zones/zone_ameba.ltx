disable_time		= 1000	;время игнорирования неживого объекта в зоне (-1 если не нужно)
disable_time_small	= 500		;время игнорирования маленького неживого объекта в зоне (-1 если не нужно)
disable_idle_time	= 500	;время отключения idle партиклов

ignore_nonalive		= false;
ignore_small		= false;
ignore_artefacts	= true

awaking_time		= 0
blowout_time		= 10000	
accamulate_time		= 1000

attack_animation_start	= 0
attack_animation_end	= 10000

blowout_light		= on
light_color		    		= 0.7,0.8,1 ;_ecp ; 1.1,1.7,1.4 ;old
light_animation             = light_green_01
light_range		    		= 15
light_time 		    		= 1.00
light_height				= 4			;подъем источника света на высоту

idle_light			= off

visible_by_detector = on

blowout_wind		= off

