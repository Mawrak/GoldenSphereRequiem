;----------- Аномалия Амеба -----------------------
[zone_ameba]
GroupControlSection	= spawn_group_zone
$spawn 			= "zones\ameba"
;$prefetch 		= 16
class			= Z_AMEBA
visual			= physics\anomaly\anomaly_studen

hit_impulse_scale	= 0.0
effective_radius	= 0.75 ;размер радиуса в процентах от оригинального, где действует зона
max_velocity_in_zone= 0.5
sound			= zone_mosquito_bald
postprocess		= postprocess_new

ef_anomaly_type			= 1
ef_weapon_type			= 13

artefacts		= 
BirthProbability = 0

min_start_power		= 0.9
max_start_power		= 1
attenuation			= 1
period				= 1
min_artefact_count	= 0
max_artefact_count	= 0

;idle_particles		= anomaly\marevo2
blowout_particles	= anomaly2\group_items\gravi_vivert
